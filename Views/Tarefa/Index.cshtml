@model List<TaskWeb.Models.Tarefa>

<html>
    <head>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
    </head>
    <body class="container-fluid">
    <h1>Lista de Tarefas de <span>@(Context.Session.GetString("Nome") ?? "Usu√°rio")</span></h1>
        <p>@Model.Count</p>

        <table class="table table-hover">

            @foreach(var tarefa in Model) {
            <tr>
                <td>@tarefa.TarefaId</td>
                <td>@tarefa.Title</td>
                <td>@tarefa.TagName</td>
                <td><a href="/tarefa/delete/@tarefa.TarefaId">Apagar</a></td>
                <td><a href="/tarefa/update/@tarefa.TarefaId">Editar</a></td>
            </tr>
            }

        </table>

        <a class="btn btn-primary" href="/tarefa/create">Adicionar</a>
    </body>
</html>