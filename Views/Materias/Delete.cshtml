@model TaskWeb.Models.Materia

<html>
    <head>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet" />
        <link href="/css/app.css" rel="stylesheet" />
    </head>
    <body class="bg-light">
        <div class="container py-4">
            <div class="card shadow-sm page-card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h1 class="h5 mb-0">Excluir Materia</h1>
                    <a class="btn btn-outline-secondary btn-sm" href="/materias"><i class="bi bi-arrow-left"></i> Voltar</a>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        Tem certeza de que deseja remover a materia <strong>@Model.Nome</strong>?
                    </div>
                    <dl class="row">
                        <dt class="col-sm-3">Carga Horaria (h)</dt>
                        <dd class="col-sm-9">@Model.CargaHorariaSemanal</dd>
                        <dt class="col-sm-3">Turma</dt>
                        <dd class="col-sm-9">@Model.TurmaNome</dd>
                        <dt class="col-sm-3">Professor</dt>
                        <dd class="col-sm-9">@Model.ProfessorNome</dd>
                    </dl>
                    <form action="/materias/delete" method="POST" class="d-flex gap-2">
                        <input type="hidden" name="id" value="@Model.MateriaId" />
                        <button class="btn btn-danger"><i class="bi bi-trash me-1"></i>Excluir</button>
                        <a href="/materias" class="btn btn-outline-secondary">Cancelar</a>
                    </form>
                </div>
            </div>
        </div>
    </body>
</html>
