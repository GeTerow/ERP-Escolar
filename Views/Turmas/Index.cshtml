@model List<TaskWeb.Models.Turma>

<html>
    <head>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet" />
        <link href="/css/app.css" rel="stylesheet" />
    </head>
    <body class="bg-light">
        <div class="container py-4">
            <div class="card shadow-sm page-card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h1 class="h5 mb-0">Turmas</h1>
                    <div>
                        <a class="btn btn-outline-secondary btn-sm me-2" href="/home">Voltar</a>
                        <a class="btn btn-primary btn-sm" href="/turmas/create"><i class="bi bi-plus-circle me-1"></i>Cadastrar</a>
                    </div>
                </div>
                <div class="card-body p-0">
                    @{
                        var success = TempData["Success"] as string;
                        var error = TempData["Error"] as string;
                    }
                    @if (!string.IsNullOrEmpty(success))
                    {
                        <div class="alert alert-success m-3">@success</div>
                    }
                    @if (!string.IsNullOrEmpty(error))
                    {
                        <div class="alert alert-danger m-3">@error</div>
                    }
                    <div class="table-responsive">
                    <table class="table table-striped table-hover align-middle mb-0 table-sticky">
                        <thead class="table-light">
                            <tr>
                                <th>Nome</th>
                                <th>Ano Letivo</th>
                                <th style="width: 140px;">Acoes</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Count == 0)
                            {
                                <tr>
                                    <td colspan="3" class="text-center text-muted">Nenhuma turma cadastrada.</td>
                                </tr>
                            }
                            else
                            {
                                foreach (var turma in Model)
                                {
                                    <tr>
                                        <td>@turma.Nome</td>
                                        <td>@(string.IsNullOrEmpty(turma.AnoLetivo) ? "-" : turma.AnoLetivo)</td>
                                        <td>
                                            <a class="btn btn-outline-primary btn-sm me-2" href="/turmas/edit/@turma.TurmaId">Editar</a>
                                            <a class="btn btn-outline-danger btn-sm" href="/turmas/delete/@turma.TurmaId">Excluir</a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>
