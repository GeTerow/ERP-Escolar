@{
    var nome = Context.Session.GetString("Nome") ?? "Usuario";
}

<html>
    <head>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet" />
        <link href="/css/app.css" rel="stylesheet" />
    </head>
    <body class="bg-light">
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary mb-4 shadow-sm">
            <div class="container">
                <span class="navbar-brand">Sistema de Grade Escolar</span>
                <div class="d-flex align-items-center ms-auto">
                    <span class="navbar-brand">Olá, @nome!</span>
                    <a class="btn btn-outline-light btn-sm" href="/usuario/logout">Sair</a>
                </div>
            </div>
        </nav>

        <div class="container pb-4">
            <div class="row g-3">
                <div class="col-md-4">
                <div class="card shadow-sm page-card h-100">
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-2">
                            <span class="icon-circle me-2"><i class="bi bi-collection"></i></span>
                            <h2 class="card-title h6 mb-0">Turmas</h2>
                        </div>
                        <p class="card-text">Cadastre as turmas da escola.</p>
                        <a href="/turmas" class="btn btn-primary">Abrir</a>
                    </div>
                </div>
                </div>
                <div class="col-md-4">
                <div class="card shadow-sm page-card h-100">
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-2">
                            <span class="icon-circle me-2"><i class="bi bi-person-badge"></i></span>
                            <h2 class="card-title h6 mb-0">Professores</h2>
                        </div>
                        <p class="card-text">Gerencie professores e contatos.</p>
                        <a href="/professores" class="btn btn-primary">Abrir</a>
                    </div>
                </div>
                </div>
                <div class="col-md-4">
                <div class="card shadow-sm page-card h-100">
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-2">
                            <span class="icon-circle me-2"><i class="bi bi-book"></i></span>
                            <h2 class="card-title h6 mb-0">Matérias</h2>
                        </div>
                        <p class="card-text">Defina matérias e carga horária.</p>
                        <a href="/materias" class="btn btn-primary">Abrir</a>
                    </div>
                </div>
                </div>
                <div class="col-md-4">
                <div class="card shadow-sm page-card h-100">
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-2">
                            <span class="icon-circle me-2"><i class="bi bi-people"></i></span>
                            <h2 class="card-title h6 mb-0">Alunos</h2>
                        </div>
                        <p class="card-text">Cadastre alunos e suas matrículas.</p>
                        <a href="/alunos" class="btn btn-primary">Abrir</a>
                    </div>
                </div>
                </div>
                <div class="col-md-4">
                <div class="card shadow-sm page-card h-100">
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-2">
                            <span class="icon-circle me-2"><i class="bi bi-grid"></i></span>
                            <h2 class="card-title h6 mb-0">Grade</h2>
                        </div>
                        <p class="card-text">Visualize a grade demonstrativa desta etapa.</p>
                        <a href="/grade" class="btn btn-success">Abrir</a>
                    </div>
                </div>
                </div>
            </div>
        </div>
    </body>
</html>
